<div class="panel panel-default">
  <div class="panel-heading">
    {{#link-to 'account' model.account class="close"}}&times;{{/link-to}}
    <h3 class="panel-title">Transaction</h3>
  </div>
  <div class="list-group">
    <div class="list-group-item">
      <dt>Description</dt>
      <dd>{{description}}</dd>
    </div>
    <div class="list-group-item">
      <dt>Amount</dt>
      <dd>{{amount}}</dd>
    </div>
    <div class="list-group-item">
      <dt>Date</dt>
      <dd>{{date}}</dd>
    </div>
    <div class="list-group-item">
      <a href="#" class="btn btn-danger remove-transaction" {{action 'deleteTransaction'}}>Remove</a>
    </div>
  </div>
</div>
